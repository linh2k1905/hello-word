<%- include('_layouts/header'); %>
<div class="row products">
    
    <%products.forEach(function(p){%>
    <div class="col-xs-12 col-md-4 p">
        <a href="/products/<%= p.category%>/<%= p.slug%>" class=" pa">
        
            <img src="/product_images/<%=p.id%>/<%= p.image%>" alt="" class="pimage"></a>
            <h4><%=p.title%></h4>
            <h4><%=p.price%> VND</h4>
           <a href="/products/<%=p.category%>/<%=p.slug%>" class="vd">Xem chi tiết</a>
           <br>
           <a href="/cart/add/<%=p.slug%>" class="vd">Thêm vào giỏ hàng</a>
        </a>
    </div>
    <%})%>
</div>
<%- include('_layouts/footer'); %>