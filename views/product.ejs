<%- include('_layouts/header'); %>
<div class="row">
    <h1 class="page-header">
        <%=p.title%>
    </h1>
    <div class="col-xs-25 col-md-5">

        <img src="/product_images/<%=p._id%>/<%= p.image %>" alt="" class="spi">
    </div>
    <div class="col-xs-12 col-md-7">
      <h4  class="indam"> Mô tả:</h4> <br>
        <p><%= p.desc%></p><br>
        <h4 class="indam">Giá</h4><br>
        <p><%= p.price%> VND </p>
        <p><a href="/cart/add/<%=p.slug%>">Thêm vào giỏ hàng</a> </p>


    </div><br>
   
    <div class="col-xs-12">
        <br><br>
        <h4 class="indam">Một số hình ảnh mô tả</h4>
        <ul class="gallery">
            <%galleryImages.forEach(function(image){%>
               <% if(image!=="thumb"){%>
                <li><a  data-fancybox="gallery" href="/product_images/<%= p._id%>/gallery/<%=image%>">
                        <img src="/product_images/<%= p._id%>/gallery/<%=image%>" >
                    </a>
                </li>
                <%}})%>
        </ul>
    </div>
</div>
<%- include('_layouts/footer'); %>