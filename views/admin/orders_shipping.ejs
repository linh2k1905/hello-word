
<%- include('../_layouts/adminheader'); %>
<h2 class="page-title">Đơn hàng</h2>
<a href="/admin/orders/recieve" class="btn btn-primary">Đã nhận đơn</a>
<a href="/admin/orders/remove" class="btn btn-primary">Đơn yêu cầu hủy</a>
<a href="/admin/orders/proccess" class="btn btn-primary">Đơn đang chờ duyệt</a>
<a href="/admin/orders/pay" class="btn btn-primary">Đã thanh toán</a>
<a href="/admin/orders/loan" class="btn btn-primary">Ghi nợ</a>
<a href="/admin/orders/shipping" class="btn btn-primary">Đang giao</a>
<p>Tổng số hóa đơn nhận:<%= count%></p>
    <table class="table table-striped table-dark  ">
        <thead class="thead-dark">
            <tr class="home">
                <th>Mã hóa đơn</th>
                <th>Nông dân </th>
                <th>Địa chỉ</th>
                <th>Trạng Thái</th>
                <th>Ghi nợ</th>
                <th>Thanh toán</th>
                
                <th>Chi tiết</th>
                
            </tr>
        </thead>
        <tbody>
           
            <%orders.forEach(function(order){%>
                <tr>
                    <td><%=order._id%></td>
                    <td><%=order.username%></td>
                    <td><%=order.address%></td>
                    <td><%=order.status%></td>
                    <%if(order.status==="Ghi nợ"||order.status==="Đã thanh toán"){%>
                        <td></td>
                        <td></td>
                        <%} else{%>
                    <td> <a href="/admin/orders/loan/<%=order._id%>" class="btn ">Ghi nợ</a></td>
                    <td> <a href="/admin/orders/pay/<%=order._id%>" class="btn ">Thanh toán</a></td>
                    <%}%>
                    <td> <a href="/admin/orders/detail/<%=order._id%>" class="btn ">Chi tiết</a></td>
              
                </tr>
               
           <% })%>
        
        </tbody>
    </table>
   
<%- include('../_layouts/adminfooter');%>
