
<%- include('../_layouts/adminheader'); %>
<h2 class="page-title">Đơn hàng</h2>
<a href="/admin/orders/recieve" class="btn btn-primary">Đã nhận</a>
<a href="/admin/orders/remove" class="btn btn-primary">Đơn yêu cầu hủy</a>
<a href="/admin/orders/proccess" class="btn btn-primary">Đơn đang chờ duyệt</a>
<a href="/admin/orders/pay" class="btn btn-primary">Đã thanh toán</a>
<a href="/admin/orders/loan" class="btn btn-primary">Ghi nợ</a>
<a href="/admin/orders/shipping" class="btn btn-primary">Đang giao</a>

<%if (count>0){%>
    <p>Tổng số hóa đơn chờ duyệt:<%= count%></p>
   
    <table class="table table-striped table-dark  ">
        <thead class="thead-dark">
            <tr class="home">
                <th>Mã hóa đơn</th>
                <th>Nông dân </th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <!-- <th>Thông tin sản phẩm</th>
                <th>Tổng tiền</th>
                <th>Ngày đặt</th> -->
                <th>Trạng thái</th>
                <th>Nhận đơn</th>
                <th>Chi tiết đơn </th>
            </tr>
        </thead>
        <tbody>
           
            <%orders.forEach(function(order){%>
                <tr>
                    <td><%=order._id%></td>
                    <td><%=order.username%></td>
                    <td><%=order.address%></td>
                    <td><%=order.tel%></td>
                    <td><%=order.status%></td>
                    <td> <a href="/admin/orders/proccess/<%=order._id%>" class="btn ">Nhận đơn</a></td>
                   <td> <a href="/admin/orders/detail/<%=order._id%>" class="btn ">Xem chi tiết</a></td>
              
                </tr>
               
           <% })%>
        
        </tbody>
    </table>
    <%} else {%>
        <h3 class="text-center">Chưa có hoá đơn nào</h3>
        <%}%>
<%- include('../_layouts/adminfooter');%>
