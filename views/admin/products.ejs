
<%- include('../_layouts/adminheader'); %>
<h2 class="page-title">Sản phẩm</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Thêm sản phẩm</a>


   
    <table class="table table-striped ">
        <h6> Tổng số sản phẩm:<%=count%></h6>
        <thead>
            <tr class="home">
                <th>Sản phẩm</th>
                <th>Giá </th>
                <th>Loại</th>
                <th>Hình ảnh</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
           
            <%products.forEach(function(product){%>
                <tr>
                    <td><%=product.title%></td>
                    <td><%=parseFloat(product.price).toFixed(2)%></td>
                    <td><%=product.category%></td>
                    <td>
                         
                            <img src="/product_images/<%=product._id%>/<%=product.image%>" id="img" >
                      
                    </td>
                   
                    <td><a href="/admin/products/edit-product/<%=product._id%>">Sửa</a></td>
                   
                    <td><a class="confirmDeletion" href="/admin/products/delete-product/<%=product._id %>">Xóa</td>
                        
                    
                </tr>
                
          <%})%>
        
        </tbody>
    </table>
    
<%- include('../_layouts/adminfooter');%>
