    <p>Tổng số hóa đơn nhận:<%= count%></p>
    <table class="table table-striped table-dark  ">
        <thead class="thead-dark">
            <tr class="home">
                <th>Mã hóa đơn</th>
                <th>Nông dân </th>
                <th>Địa chỉ</th>
                <th>Trạng Thái</th>
                
                
            </tr>
        </thead>
        <tbody>
           
            <%orders.forEach(function(order){%>
                <tr>
                    <td><%=order._id%></td>
                    <td><%=order.username%></td>
                    <td><%=order.address%></td>
                    <td><%=order.status%></td>
                    
                </tr>
               
           <% })%>
        
        </tbody>
    </table>
    
<%- include('../_layouts/adminfooter');%>
