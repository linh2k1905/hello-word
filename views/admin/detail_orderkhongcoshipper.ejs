<%- include('../_layouts/adminheader'); %>
<a href="/admin/orders" class="btn btn-primary">Trở về</a>

<div class="row">
   
    <div class="col-sm-6">
            <h3>THÔNG TIN KHÁCH HÀNG</h3>
            <table border="1">
            <tr>
                        <th>Mã hóa đơn</th>
                        
                        <td><%=order._id%></td>
                        </tr>
                        <tr><th>Tên người mua </th>
                        <td><%=order.username%></td></tr>
                        <tr>
                        
                        
            </tr>
            <tr><th>Địa chỉ</th> <td><%=order.address%></td></tr>
            <tr><th>Số điện thoại</th> <td><%=order.tel%></td></tr>
            <tr><th>Ngày đặt</th><td><%=order.order_date.toDateString()%></td></tr>
            <tr><th>Trạng thái đơn</th><td><%=order.status%></td></tr>
            <tr>
                        
                    
                    
                    </tr>
                </table>
          
        </div>
        
        
          
    <H3>CHI TIẾT HÓA ĐƠN</H3>
<table class="table table-striped table-dark  ">
    <thead class="thead-dark">
        <tr class="home">
            
            <th>Thông tin sản phẩm</th>
            
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng con</th>
           
        </tr>
    </thead>
    <tbody>
       
        
           
               
                <%order.product.forEach(function(product){%>
                    <tr>
                    <td><%=product.title%></td>
                    <td><%=product.price%></td>
                    <td><%=product.qty%></td>
                    <td><%=product.qty*product.price%></td>
                </tr>
                <% })%>
               
                
               
               
            </tr>
           
      <tr > <td></td><td></td><th>Tổng tiền</th><tH><%=order.total%></tH></tr>
    
    </tbody>
</table>
<%- include('../_layouts/adminfooter'); %> 