<% var totalsum = 0 %>
<h3>Tổng đơn đã thanh toán : <%=countThanhtoan %></h3>
    <table class="table table-striped table-dark  ">
        <thead class="thead-dark">
            <tr class="home">
                <th>Mã hóa đơn</th>
                <th>Nông dân </th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
               <th>Tổng</th>
                
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
           
            <%ordersThanhtoan.forEach(function(order){%>
                <tr>
                    <td><%=order._id%></td>
                    <td><%=order.username%></td>
                    <td><%=order.address%></td>
                    <td><%=order.tel%></td>
                    <td><%=order.total%></td>
                    <%totalsum +=order.total%>
                   
                    <td> <a href="/admin/orders/detail/<%=order._id%>" class="btn ">Chi tiết</a></td>
              
                </tr>
               
           <% })%>
        
        </tbody>
        <% var totalsumGhino = 0 %>
    </table>
    <h3 class="tong">Tổng : <%= totalsum %> Đ</h3>

    <h3>Tổng đơn ghi nợ: <%=countGhino%></h3>
    <table class="table table-striped table-dark  ">
        <thead class="thead-dark">
            <tr class="home">
                <th>Mã hóa đơn</th>
                <th>Nông dân </th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Tổng tiền</th>
                
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
           
            <%orders.forEach(function(order){%>
                <tr>
                    <td><%=order._id%></td>
                    <td><%=order.username%></td>
                    <td><%=order.address%></td>
                    <td><%=order.tel%></td>
                   
                    <td><%=order.total%></td>
                    <%totalsumGhino +=order.total%>
                   
                    <td> <a href="/admin/orders/detail/<%=order._id%>" class="btn ">Chi tiết</a></td>
              
                </tr>
               
           <% })%>
        
        </tbody>
    </table>
    <h3 class="tong">Tổng đơn nợ: <%=totalsumGhino%> Đ</h3>
    <h3>Tổng nhân viên: <%=countUser%></h3>
    <table class="table table-striped ">
        <thead>
            <tr class="home">
                <th>Tên đầy đủ</th>
                <th>Số điện thoại </th>
                <th>CMND</th>
                <th>Lương</th>
               
            </tr>
            </tr>
    
            </tr>
        </thead>
        <tbody>
            <% var sumluong = 0%>
    <%users.forEach(function(users){%>
      
       
        <tr>
    
        <td><%= users.name%></td>
        <td><%= users.tel%></td>
       
        <td><%= users.cmnd%></td>
        <td><%= users.salery%></td>
        <%sumluong += +users.salery%>
        
    </tr>
      </tr>
        <%})%>
    </tbody>
    </table>
   <h3 class="tong"> Lương phải trả : <%= sumluong%> Đ</h3>
    
