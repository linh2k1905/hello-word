
<%- include('../_layouts/adminheader'); %>
<h2 class="page-title">Sửa trang</h2>
<a href="/admin/pages" class="btn btn-primary">Trở về</a>
<form action="/admin/pages/edit-page/<%=id%>" method="post">
    <div class="form-group">
        <label for="title">Tên trang</label>
        <input type="text"  class="form-control" name="title"  value= "<%= title %>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text"  class="form-control" name="slug"  value="<%= slug %>" placeholder="Slug">
    </div>

    <div class="form-group">
        <label for="content">Nôị dung</label>
       <textarea name="content" id="ta" class="form-control" cols="30" rows="10"><%= content%></textarea>
      <br>
       <button class="btn btn-primary">Sửa</button>
    </div>

</form>
<%- include('../_layouts/adminfooter');%>
